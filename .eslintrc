{
  "extends": ["react-app", "react-app/jest"],
  "rules": {
    "quotes": ["error", "double"],
    "no-console": "warn",
    "prefer-const": "error",
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "max-len": ["error", { "code": 100 }],
    "semi": ["warn", "always"],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index",
          "object",
          "type"
        ]
      }
    ],
    "react/jsx-filename-extension": ["warn", { "extensions": [".tsx"] }]
  }
}
